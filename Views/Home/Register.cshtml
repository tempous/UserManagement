@model UserManagement.Models.Register
@{
    ViewData["Title"] = "Sign up";
}

<h2>Sign up</h2>
<form method="post" asp-controller="Home" asp-action="Register"
      asp-route-returnUrl="Index">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label class="text-muted" asp-for="Name">Name </label>
        <input class="form-control" asp-for="Name" placeholder="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label class="text-muted" asp-for="UserName">Username </label>
        <input class="form-control" asp-for="UserName" placeholder="username" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label class="text-muted" asp-for="Email">Email </label>
        <input class="form-control" asp-for="Email" placeholder="example@gmail.com" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label class="text-muted" asp-for="Password">Password </label>
        <input class="form-control" asp-for="Password" placeholder="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <input type="submit" class="btn btn-outline-primary" value="Sign up" />
    </div>
</form>