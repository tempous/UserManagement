@model IEnumerable<UserManagement.Models.User>
@{
    ViewData["Title"] = "Users";
}

<form asp-controller="Home">
    <input type="submit" class="btn btn-outline-secondary" value="Block" formaction="~/Home/Block" />
    <input type="submit" class="btn btn-outline-primary" value="Unblock" formaction="~/Home/Unblock" />
    <input type="submit" class="btn btn-outline-danger" value="Delete" formaction="~/Home/Delete" />

    <table class="table table-borderless text-light">
        <thead class="thead-dark text-secondary">
            <tr>
                <th><input type="checkbox" id="cbSelectAll" onclick="SelectAll('checked', this)"/></th>
                <th>Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Registration date</th>
                <th>Last login</th>
                <th>Status</th>
            </tr>
        </thead>

        @foreach (var user in Model)
        {
            <tr>
                <td><input type="checkbox" class="checked" name="selectedUserId" value="@user.Id" onclick="Select(this)"></td>
                <td>@Html.DisplayFor(i => user.Name)</td>
                <td>@Html.DisplayFor(i => user.UserName)</td>
                <td>@Html.DisplayFor(i => user.Email)</td>
                <td>@Html.DisplayFor(i => user.RegistrationDate)</td>
                <td>@Html.DisplayFor(i => user.LastLogin)</td>
                <td>@Html.DisplayFor(i => user.Status)</td>
            </tr>
        }
    </table>
</form>

<script>
    function SelectAll(className, element) {
        var elements = document.getElementsByClassName(className);

        for (var i = 0; i < elements.length; i++)
                elements[i].checked = element.checked;
    }

    function Select() {
        document.getElementById('cbSelectAll').checked = false;
    }
</script>